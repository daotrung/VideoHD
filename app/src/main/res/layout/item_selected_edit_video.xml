<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main_root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bck"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:background="@color/bck"
        android:id="@+id/img_video_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtTitleVideoEdit"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher_round"
        app:shapeAppearanceOverlay="@style/RoundedSquare"/>

    <TextView
        android:id="@+id/txtTitleVideoEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:ellipsize="end"
        android:ems="10"
        android:lines="1"
        android:maxLines="1"
        android:text="Fringilla Fusce Elit"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_video_main"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtTimeVideoEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#99EBEBF5"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@id/txtTitleVideoEdit"
        app:layout_constraintTop_toBottomOf="@id/txtTitleVideoEdit"
        android:text="04:15"/>
    <TextView
        android:id="@+id/txtStorageVideoEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.51Mb"
        android:textColor="#99EBEBF5"
        android:textSize="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleVideoEdit"
        app:layout_constraintStart_toEndOf="@id/txtTimeVideoEdit"/>
    <ImageButton
        android:id="@+id/imgSelectedVideoEdit"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/ic_un_check_box"
        android:backgroundTint="@color/bck"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>