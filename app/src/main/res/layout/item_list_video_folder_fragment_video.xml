<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bck"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginEnd="@dimen/_5sdp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:background="@color/bck"
        android:id="@+id/img_video_folder_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/ic_baseline_folder_24"
        />

    <TextView
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:id="@+id/txtTitleVideoFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Fringilla Fusce Elit"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toEndOf="@+id/img_video_folder_main"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtNumberVideoFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#99EBEBF5"
        android:textSize="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="@id/txtTitleVideoFolder"
        app:layout_constraintTop_toBottomOf="@id/txtTitleVideoFolder"
        android:text="So video"/>
    <ImageView
        android:id="@+id/imgMoreItemFolder"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_more"
        app:layout_constraintTop_toTopOf="@id/txtTitleVideoFolder"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>