<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/edit_menu_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_3sdp">

        <ImageView
            android:id="@+id/icon_edit_menu_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/txt_edit_menu_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:fontFamily="@font/nunito_normal"
            android:text="@string/edit"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toEndOf="@id/icon_edit_menu_video"
            app:layout_constraintTop_toTopOf="@id/icon_edit_menu_video" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/equalizer_menu_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_menu_video"
        android:gravity="center|start"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_3sdp">

        <ImageView
            android:id="@+id/icon_equalizer_menu_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_setting_equalizer"
            app:layout_constraintStart_toStartOf="@id/icon_edit_menu_video"
            app:layout_constraintTop_toBottomOf="@id/icon_edit_menu_video" />

        <TextView
            android:id="@+id/txt_equalizer_menu_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:text="@string/equalizer"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintStart_toStartOf="@id/txt_edit_menu_video"
            app:layout_constraintTop_toBottomOf="@id/icon_edit_menu_video" />
    </LinearLayout>


</RelativeLayout>