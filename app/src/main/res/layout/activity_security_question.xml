<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bck"
    tools:context=".activity.SecurityQuestionActivity">

    <LinearLayout
        android:id="@+id/toolbar_verify_question"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBackVerifySercurityQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp"
            android:backgroundTint="@color/bck"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:text="Verify Sercurity Question"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtDisplayTitleVerifyQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/toolbar_verify_question"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="The security question is set when creating a password"/>


    <Button
        android:id="@+id/btnQuestionDisplay"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:backgroundTint="@color/white"
        android:layout_below="@id/txtDisplayTitleVerifyQuestion"
        android:layout_margin="@dimen/_10sdp"
        android:text="What is your favorite food ?"
        android:textAllCaps="false"
        android:gravity="start|center"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"/>
    <EditText
        android:id="@+id/edtAnswer"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_below="@id/btnQuestionDisplay"
        android:background="@color/white"
        android:hint="Please Enter Your Answer"
        android:textSize="@dimen/_10sdp"
        android:paddingStart="@dimen/_10sdp"
        android:gravity="center|start"
        android:layout_margin="@dimen/_10sdp"/>

    <Button
        android:id="@+id/btnDone"
        android:layout_below="@id/edtAnswer"
        android:layout_width="wrap_content"
        android:backgroundTint="#CACA74"
        android:textColor="@color/black"
        android:text="Done"
        android:layout_centerInParent="true"
        android:layout_height="?actionBarSize"/>

</RelativeLayout>