<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SettingFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bck"
        android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:weightSum="10"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/titleSetting"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="0.5"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SETTING"
                android:gravity="center|start"
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_general"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_below="@id/titleSetting"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@id/titleSetting"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/montserrat"
                android:text="General"
                android:textColor="#777E90"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/generalSetting"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/txtGeneral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                app:cardBackgroundColor="#383684"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:weightSum="4"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/swb_show_last_played_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="start"
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Show last played video"/>

                        <ImageView
                            android:id="@+id/img_showlastPlayerVideo"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_swbar_un_check_setting"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/swb_show_resume_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="start"
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Show resume status in video list"/>

                        <ImageView
                            android:id="@+id/img_show_resume_status_video"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_swbar_un_check_setting"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/swb_mark_last_played_media_folder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:weightSum="3"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="start"
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Mark last played media and folder"/>

                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_swbar_un_check_setting"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/scorllListVideoSizeFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:weightSum="3"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="start"
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Video size filter"/>

                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_right"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_playback"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_weight="3.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/layout_general"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtPlayback"
                android:layout_margin="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/generalSetting"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/montserrat"
                android:text="Playback"
                android:textColor="#777E90"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
            <androidx.cardview.widget.CardView

                android:id="@+id/playbackSetting"
                android:layout_below="@id/txtPlayback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:cardBackgroundColor="#383684"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/swb_remember_brightness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:weightSum="3"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="start"
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Remember brightness"/>

                        <ImageView
                            android:id="@+id/imgRememberBrightNess"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_swbar_un_check_setting"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/swb_remember_aspect_ratio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:weightSum="3"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="start"
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Remember aspect ratio"/>

                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_swbar_un_check_setting"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/scollerListTimeTap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:weightSum="3"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="start"
                            android:layout_weight="2.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="Time to fast forward and rewind"/>

                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_right"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/swb_auto_play_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:gravity="center"
                        android:weightSum="3"
                        android:paddingHorizontal="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.5"
                            android:fontFamily="@font/montserrat"
                            android:gravity="start"
                            android:text="Auto play next"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_swbar_un_check_setting"/>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/layout_settings"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/layout_playback"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOtherSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/montserrat"
                android:text="Other settings"
                android:textColor="#777E90"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/privacy_policy"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/txtOtherSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_privacy_policy"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Privacy Policy"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/term_of_us"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_term_of_use"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Term of Use"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contact_us"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/term_of_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_contact_us"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Contact Us"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_with_friends"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_share_friend"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Share with Friends"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rating"
                android:layout_margin="@dimen/_5sdp"
                android:layout_below="@+id/share_with_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_rating"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="Rating"/>


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    </RelativeLayout>
</androidx.core.widget.NestedScrollView>