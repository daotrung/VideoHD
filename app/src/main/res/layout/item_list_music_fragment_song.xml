<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@android:color/transparent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imvAvatar"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/bck"
        android:scaleType="centerCrop"
        android:src="@drawable/imv_music"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedSquare" />

    <TextView
        android:id="@+id/tvMusicName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito_normal"
        android:text="Ten bai hat"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/txtTimeSong"
        app:layout_constraintStart_toEndOf="@+id/imvAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNameSinger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/nunito_normal"
        android:text="Ten ca si"
        android:textColor="#99EBEBF5"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@id/txtTimeSong"
        app:layout_constraintStart_toEndOf="@id/imvAvatar"
        app:layout_constraintTop_toBottomOf="@id/tvMusicName" />

    <TextView
        android:id="@+id/txtTimeSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_5sdp"
        android:text="3:01"
        android:textColor="#99EBEBF5"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/imgMoreItemMusic"
        app:layout_constraintEnd_toStartOf="@id/imgMoreItemMusic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/tvMusicName"
        app:layout_constraintTop_toTopOf="@id/imgMoreItemMusic" />

    <ImageView
        android:id="@+id/imgMoreItemMusic"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/_7sdp"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>