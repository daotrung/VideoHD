<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/_16sdp"
    android:paddingTop="@dimen/_11sdp"
    android:paddingEnd="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bck"
    tools:context=".fragment.VideoFragment">

    <ImageView
        android:id="@+id/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_more"
        android:layout_width="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_height="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/txt_title_menu_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="VIDEO"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/ic_crown_main_video"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_search_main_video"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_crown"/>
    <ImageView
        android:id="@+id/ic_search_main_video"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_private_lock"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_search"/>
    <ImageView
        android:id="@+id/ic_private_lock"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ic_more"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/ic_lock_outline"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_title_menu_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/bck"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorHeight="@dimen/_15sdp"
        app:tabIndicator="@drawable/ic_rectangle_blur"
        app:tabPaddingBottom="@dimen/_5sdp"
        app:tabIndicatorColor="#777E90"
        app:tabTextAppearance="@style/TextAppearance.AppCompat.Medium"
        app:tabTextColor="#777E90" />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_2_video"
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintTop_toBottomOf="@id/tablayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </androidx.viewpager2.widget.ViewPager2>

</androidx.constraintlayout.widget.ConstraintLayout>